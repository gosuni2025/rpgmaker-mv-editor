{
  "name": "rpgmaker-mv-editor",
  "version": "0.0.7",
  "private": true,
  "main": "dist-electron/main.js",
  "scripts": {
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ../mcp-server && npm install",
    "predev": "lsof -ti:3001 -ti:5173 | xargs kill -9 2>/dev/null; true",
    "dev": "cross-env SERVER_PORT=3001 CLIENT_PORT=5173 concurrently \"npm run dev:server\" \"npm run dev:client:wait\"",
    "dev:server": "cd server && npx tsx --watch index.ts",
    "dev:client": "cd client && npm run dev",
    "dev:client:wait": "wait-on -t 30000 tcp:3001 && npm run dev:client",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npx tsc",
    "build:electron": "npx esbuild electron/main.ts --bundle --platform=node --target=node18 --outfile=dist-electron/main.js --external:electron",
    "build": "npm run build:client && npm run build:server && npm run build:electron",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "@types/archiver": "^7.0.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8",
    "esbuild": "^0.24.0",
    "wait-on": "^8.0.5"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "jszip": "^3.10.1"
  }
}
